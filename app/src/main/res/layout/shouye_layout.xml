<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/loading_shape"
    tools:context="com.zm.Activity.ShouyeActivity"
    android:orientation="vertical">
    <SurfaceView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:id="@+id/sign_camera_view"
        />
    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="57"
        />

    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="26">
        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="52"
            android:orientation="horizontal"
            android:id="@+id/shouye_button_fanhuidenglu"
            android:clickable="true">
            <LinearLayout
                style="@style/layout_horizontal"
                android:layout_weight="20"/>
            <ImageView
                style="@style/layout_horizontal"
                android:layout_weight="12"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:background="@drawable/fanhui"
                />
            <LinearLayout
                style="@style/layout_horizontal"
                android:layout_weight="20"/>
        </LinearLayout>
        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="398"/>
    </LinearLayout>
    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="122"
        />
    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="161">
        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="56"/>
        <ImageView
            style="@style/layout_horizontal"
            android:layout_weight="113"
            android:background="@drawable/sign"
            android:id="@+id/shouye_button_yuyueyisheng"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:clickable="true"/>
        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="112"/>
        <ImageView
            style="@style/layout_horizontal"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_weight="113"
            android:background="@drawable/signlist"
            android:id="@+id/shouye_button_sign_list"
            android:clickable="true"/>
        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="56"/>
    </LinearLayout>



    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="43"
        />
    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="161">
        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="56"/>
        <ImageView
            style="@style/layout_horizontal"
            android:layout_weight="113"
            android:background="@drawable/editdepartment"
            android:id="@+id/shouye_button_xiugaibumen"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:clickable="true"/>
        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="112"/>
        <Button
            style="@style/layout_horizontal"
            android:layout_weight="113"
            android:text="签到记录"
            android:background="#FFFFFF"
            android:id="@+id/shouye_button_unuse"
            android:scaleType="fitCenter"
            android:clickable="false"
            android:visibility="invisible"/>
        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="56"/>
    </LinearLayout>
    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="100"
        />
    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="130">
        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="20"/>
        <TextView
            style="@style/layout_horizontal"
            android:layout_weight="410"
            android:textSize="20dp"
            android:text="测试学校测试班级"
            android:id="@+id/sign_info_text"
            android:clickable="false"
            android:singleLine="false"
            android:gravity="center"
            android:textColor="#FFFFFF"
            />
        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="20"/>
    </LinearLayout>
</LinearLayout>
